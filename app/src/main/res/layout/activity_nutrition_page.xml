<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E6FBFA"
    tools:context=".Nutrition_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1">

        <TextView
            android:id="@+id/currentCaloriesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Calories consumed: 0"
            android:background="#6DDBE8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:orientation="horizontal"
        android:id = "@+id/layout2"
        android:paddingTop="5dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:layout_gravity="center"
            android:max="100"
            android:background="#306167"
            android:progress="50"
            android:progressDrawable="@drawable/ic_custom_progress2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout2"
        android:layout_alignEnd="@id/layout2"
        android:layout_alignTop="@id/layout2"
        android:layout_alignBottom="@id/layout2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Burnt"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout2"
        android:gravity="end"
        android:id="@+id/layout3">

        <TextView
            android:id="@+id/targetCaloriesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Calories: 0"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:background="#6DDBE8"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ProgressBar
            android:id="@+id/waterIntakeProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:background="#306167"
            android:indeterminate="false"
            android:max="15"
            android:progress="0"
            android:secondaryProgress="@color/black"
            android:progressDrawable="@drawable/ic_custom_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Water Intake"
            android:paddingLeft="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plusButtonForWaterIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textSize="20sp"
            android:layout_weight="0.5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/minusButtonForWaterIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="-"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout4"
        android:layout_alignEnd="@id/layout4"
        android:layout_alignTop="@id/layout4"
        android:layout_alignBottom="@id/layout4"
        android:gravity="start">

            <TextView
                android:id="@+id/water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout4"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ProgressBar
            android:id="@+id/breakfastIntakeProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:background="#306167"
            android:indeterminate="false"
            android:max="15"
            android:progress="0"
            android:secondaryProgress="@color/black"
            android:progressDrawable="@drawable/ic_custom_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Breakfast"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id = "@+id/breakfastCaloriesInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter  calories"
            />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_box"
            android:onClick="store_input"
            android:contentDescription="TODO"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout5"
        android:layout_alignEnd="@id/layout5"
        android:layout_alignTop="@id/layout5"
        android:layout_alignBottom="@id/layout5"
        android:gravity="start">

        <TextView
            android:id="@+id/breakfastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"/>

    </LinearLayout>

<!--    ///Code for Lunch-->
    <LinearLayout
        android:id = "@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout5"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingStart="5dp">

        <ProgressBar
            android:id="@+id/LunchProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:background="#306167"
            android:indeterminate="false"
            android:max="15"
            android:progress="0"
            android:secondaryProgress="@color/black"
            android:progressDrawable="@drawable/ic_custom_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="   Lunch   "
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id = "@+id/LunchCaloriesInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter  calories"
            />

        <ImageButton
            android:id="@+id/LunchInputButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_box"
            android:onClick="store_input"
            android:contentDescription="TODO"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout6"
        android:layout_alignEnd="@id/layout6"
        android:layout_alignTop="@id/layout6"
        android:layout_alignBottom="@id/layout6"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/LunchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    0"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"/>

    </LinearLayout>

<!--    Code for Dinner -->

    <LinearLayout
        android:id = "@+id/layout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout6"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <ProgressBar
            android:id="@+id/DinnerProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:background="#306167"
            android:indeterminate="false"
            android:max="15"
            android:progress="0"
            android:secondaryProgress="@color/black"
            android:progressDrawable="@drawable/ic_custom_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="   Dinner   "
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id = "@+id/DinnerCaloriesInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter  calories"
            />

        <ImageButton
            android:id="@+id/DinnerInputButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_box"
            android:onClick="store_input"
            android:contentDescription="TODO"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout7"
        android:layout_alignEnd="@id/layout7"
        android:layout_alignTop="@id/layout7"
        android:layout_alignBottom="@id/layout7"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/DinnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    0"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"/>

    </LinearLayout>

<!--    Snacks Code below-->
    <LinearLayout
        android:id = "@+id/layout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout7"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <ProgressBar
            android:id="@+id/SnacksProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:background="#306167"
            android:indeterminate="false"
            android:max="15"
            android:progress="0"
            android:secondaryProgress="@color/black"
            android:progressDrawable="@drawable/ic_custom_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="   Snacks   "
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id = "@+id/SnacksCaloriesInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter  calories"
            />

        <ImageButton
            android:id="@+id/SnacksInputButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_box"
            android:onClick="store_input"
            android:contentDescription="TODO"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout8"
        android:layout_alignEnd="@id/layout8"
        android:layout_alignTop="@id/layout8"
        android:layout_alignBottom="@id/layout8"
        android:gravity="start">

        <TextView
            android:id="@+id/SnacksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    0"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"/>

    </LinearLayout>
</RelativeLayout>

