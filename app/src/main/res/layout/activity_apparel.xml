<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".HomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6FBFA">

        <LinearLayout
            android:id="@+id/NikeView"
            android:layout_width="359dp"
            android:layout_height="163dp"
            android:background="@drawable/custom_box"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079"
            app:layout_constraintWidth_percent="0.42">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.079"
                app:layout_constraintWidth_percent="0.42"
                app:srcCompat="@drawable/nike_symbol" />

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.079"
                app:layout_constraintWidth_percent="0.42">

                <TextView
                    android:id="@+id/textView8"
                    android:textColor="@color/black"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="NIKE™"
                    android:textSize="30sp" />

                <ImageButton
                    android:id="@+id/nike_next"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:imeOptions="actionDone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/next_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.962"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.53" />

                />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="280dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Browse gym apparel from Nike™️️ with sales up to 40% off!"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/AdidasView"
            android:layout_width="359dp"
            android:layout_height="163dp"
            android:background="@drawable/custom_box"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.755"
            app:layout_constraintWidth_percent="0.42" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.422"
                app:layout_constraintWidth_percent="0.42">

                <ImageView
                    android:id="@+id/imageView71"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:srcCompat="@drawable/adidas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.422"
                    app:layout_constraintWidth_percent="0.42">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="adidas™"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/adidas_next"
                        android:layout_width="50dp"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/next_button" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView921"
                    android:layout_width="280dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Browse apparel from adidas™️️ with sales up to 40% off!"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gymshark"
            android:layout_width="359dp"
            android:layout_height="163dp"
            android:background="@drawable/custom_box"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422"
            app:layout_constraintWidth_percent="0.42" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.422"
                app:layout_constraintWidth_percent="0.42">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:srcCompat="@drawable/gymshark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.422"
                    app:layout_constraintWidth_percent="0.42">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GYMSHARK™"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/gymshark_next"
                        android:layout_width="50dp"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/next_button" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="280dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Browse apparel from GYMSHARK™️️ with sales up to 40% off!"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>


        <include
            layout="@layout/generic_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>